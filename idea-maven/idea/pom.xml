  <profiles>
    <profile>
      <id>default-tools_sun</id>
      <activation>
        <property>
          <name>java.vendor</name>
          <value>Sun Microsystems Inc.</value>
        </property>
      </activation>
      <dependencies>
        <dependency>
          <groupId>com.sun</groupId>
          <artifactId>tools</artifactId>
          <version>1.6.0</version>
          <scope>system</scope>
          <systemPath>${java.home}/../lib/tools.jar</systemPath>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>default-tools_oracle</id>
      <activation>
        <property>
          <name>java.vendor</name>
          <value>Oracle Corporation</value>
        </property>
      </activation>
      <dependencies>
        <dependency>
          <groupId>com.sun</groupId>
          <artifactId>tools</artifactId>
          <version>1.7.0</version>
          <scope>system</scope>
          <systemPath>${java.home}/../lib/tools.jar</systemPath>
        </dependency>
      </dependencies>
    </profile>
  </profiles>

  <build>
    <!--<sourceDirectory>${idea.home}/java/openapi/src</sourceDirectory>-->
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <excludes>
            <exclude>**/*OptimizedFileManager.java</exclude>
            <exclude>**/*OptimizedFileManager17.java</exclude>
          </excludes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.gmaven</groupId>
        <artifactId>gmaven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>generateStubs</goal>
            </goals>
            <configuration>
              <providerSelection>1.8</providerSelection>
              <sources>
                <fileset>
                  <directory>${idea.home}/jps/model/src</directory>
                  <includes>
                    <include>**/*.groovy</include>
                  </includes>
                </fileset>
              </sources>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>org.codehaus.groovy</groupId>
            <artifactId>groovy-all</artifactId>
            <version>1.8.6</version>
          </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>add-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>${idea.home}/platform/core-impl/src</source>
                <source>${idea.home}/platform/platform-impl/src</source>
                <source>${idea.home}/platform/vcs-impl/src</source>
                <source>${idea.home}/platform/lang-impl/src</source>
                <source>${idea.home}/platform/testRunner/src</source>
                <source>${idea.home}/platform/smRunner/src</source>
                <source>${idea.home}/platform/xdebugger-impl/src</source>
                <source>${idea.home}/platform/testFramework/src</source>
                <source>${idea.home}/platform/testFramework/bootstrap/src</source>
                <source>${idea.home}/xml/impl/src</source>
                <source>${idea.home}/xml/relaxng/src</source>
                <source>${idea.home}/platform/lvcs-impl/src</source>
                <source>${idea.home}/plugins/spellchecker/src</source>
                <source>${idea.home}/images/src</source>

                <source>${idea.home}/java/compiler/notNull/src</source>
                <source>${idea.home}/platform/platform-main/src</source>
                <source>${idea.home}/java/java-psi-impl/src</source>
                <source>${idea.home}/java/java-impl/src</source>
                <source>${idea.home}/java/compiler/impl/src</source>
                <source>${idea.home}/java/debugger/impl/src</source>
                <source>${idea.home}/xml/dom-impl/src</source>
                <source>${idea.home}/java/execution/impl/src</source>
                <source>${idea.home}/java/jsp-spi/src</source>
                <source>${idea.home}/java/idea-ui/src</source>
                <source>${idea.home}/RegExpSupport/src</source>
                <source>${idea.home}/java/testFramework/src</source>
                <source>${idea.home}/jps/jps-builders/src</source>
                <source>${idea.home}/jps/model/src</source>

              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
