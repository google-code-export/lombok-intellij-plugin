<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.jetbrains.idea</groupId>
		<artifactId>parent</artifactId>
		<version>1</version>
	</parent>

	<artifactId>openapi</artifactId>
  <version>${idea.version}</version>

	<name>Maven Integration of openapi modul</name>
	<description>Maven modul for openapi jar</description>

	<dependencies>
		<dependency>
			<groupId>org.jetbrains.idea</groupId>
			<artifactId>annotations</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jetbrains.idea</groupId>
			<artifactId>util</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jetbrains.idea</groupId>
			<artifactId>extensions</artifactId>
		</dependency>

		<dependency>
			<groupId>org.jetbrains.idea</groupId>
			<artifactId>testFramework</artifactId>
		</dependency>

		<dependency>
			<groupId>org.jetbrains.thirdparthy</groupId>
			<artifactId>microba</artifactId>
		</dependency>

		<dependency>
			<groupId>org.jetbrains.thirdparthy</groupId>
			<artifactId>trove4j</artifactId>
		</dependency>

		<dependency>
			<groupId>be.cyberelf.nanoxml</groupId>
			<artifactId>nanoxml</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-codec</groupId>
			<artifactId>commons-codec</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.ws.xmlrpc</groupId>
			<artifactId>xmlrpc</artifactId>
		</dependency>

		<dependency>
			<groupId>dk.brics.automaton</groupId>
			<artifactId>automaton</artifactId>
		</dependency>
		<dependency>
			<groupId>org.picocontainer</groupId>
			<artifactId>picocontainer</artifactId>
		</dependency>
		<dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
		</dependency>

		<dependency>
			<groupId>org.jdom</groupId>
			<artifactId>jdom</artifactId>
		</dependency>

	</dependencies>

	<profiles>
		<profile>
			<id>default-tools_sun</id>
			<activation>
				<property>
					<name>java.vendor</name>
					<value>Sun Microsystems Inc.</value>
				</property>
			</activation>
			<dependencies>
				<dependency>
					<groupId>com.sun</groupId>
					<artifactId>tools</artifactId>
					<version>1.6.0</version>
					<scope>system</scope>
					<systemPath>${java.home}/../lib/tools.jar</systemPath>
				</dependency>
			</dependencies>
		</profile>
		<profile>
			<id>default-tools_oracle</id>
			<activation>
				<property>
					<name>java.vendor</name>
					<value>Oracle Corporation</value>
				</property>
			</activation>
			<dependencies>
				<dependency>
					<groupId>com.sun</groupId>
					<artifactId>tools</artifactId>
					<version>1.7.0</version>
					<scope>system</scope>
					<systemPath>${java.home}/../lib/tools.jar</systemPath>
				</dependency>
			</dependencies>
		</profile>
	</profiles>

	<build>
		<sourceDirectory>${idea.home}/java/openapi/src</sourceDirectory>
		<resources>
			<resource>
				<directory>${idea.home}/java/java-psi-api/src</directory>
				<excludes>
					<exclude>*.java</exclude>
				</excludes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${idea.home}/platform/core-api/src</source>
								<source>${idea.home}/platform/platform-api/src</source>
								<source>${idea.home}/platform/lvcs-api/src</source>
								<source>${idea.home}/platform/lang-api/src</source>
								<source>${idea.home}/platform/vcs-api/src</source>
								<source>${idea.home}/platform/usageView/src</source>
								<source>${idea.home}/platform/xdebugger-api/src</source>
								<source>${idea.home}/xml/openapi/src</source>

								<source>${idea.home}/java/java-psi-api/src</source>
								<source>${idea.home}/java/jsp-openapi/src</source>
								<source>${idea.home}/java/jsp-base-openapi/src</source>
								<!--<source>${idea.home}/java/testFramework/src</source>-->
								<source>${idea.home}/java/compiler/openapi/src</source>
								<source>${idea.home}/java/debugger/openapi/src</source>
								<source>${idea.home}/java/execution/openapi/src</source>
								<source>${idea.home}/xml/dom-openapi/src</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>